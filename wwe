    <script>
        let stream = null;
        let isRecording = false;
        let detectionInterval = null;
        let videoElement = document.getElementById('webcam');
        let canvas = document.getElementById('canvas');
        let ctx = canvas.getContext('2d');

        // Object detection database (simulasi AI)
        const objectDatabase = [
            { keywords: ['coca', 'cola', 'coke'], result: 'ü•§ Coca-Cola - Minuman berkarbonasi terkenal dari The Coca-Cola Company' },
            { keywords: ['pepsi'], result: 'ü•§ Pepsi - Minuman berkarbonasi saingan Coca-Cola dari PepsiCo' },
            { keywords: ['minecraft', 'creeper'], result: 'üéÆ Minecraft - Game sandbox populer yang dikembangkan oleh Mojang Studios' },
            { keywords: ['youtube', 'yt'], result: 'üì∫ YouTube - Platform berbagi video terbesar di dunia milik Google' },
            { keywords: ['google'], result: 'üîç Google - Mesin pencari dan perusahaan teknologi terbesar' },
            { keywords: ['facebook', 'meta'], result: 'üì± Facebook/Meta - Platform media sosial yang didirikan Mark Zuckerberg' },
            { keywords: ['instagram', 'ig'], result: 'üì∏ Instagram - Platform berbagi foto dan video milik Meta' },
            { keywords: ['twitter', 'x'], result: 'üê¶ Twitter/X - Platform microblogging untuk berbagi pemikiran singkat' },
            { keywords: ['apple', 'iphone'], result: 'üçé Apple - Perusahaan teknologi yang memproduksi iPhone, iPad, Mac' },
            { keywords: ['samsung'], result: 'üì± Samsung - Perusahaan elektronik Korea yang memproduksi smartphone dan TV' },
            { keywords: ['nike'], result: 'üëü Nike - Brand olahraga terkenal dengan logo swoosh' },
            { keywords: ['adidas'], result: 'üëü Adidas - Brand olahraga dengan tiga garis khas' },
            { keywords: ['pizza'], result: 'üçï Pizza - Makanan Italia berupa roti bundar dengan topping keju dan saus' },
            { keywords: ['burger', 'hamburger'], result: 'üçî Hamburger - Roti isi daging dan sayuran yang populer' },
            { keywords: ['coffee', 'kopi'], result: '‚òï Kopi - Minuman dari biji kopi yang mengandung kafein' },
            { keywords: ['cat', 'kucing'], result: 'üê± Kucing - Hewan peliharaan lucu berkaki empat yang suka tidur' },
            { keywords: ['dog', 'anjing'], result: 'üêï Anjing - Sahabat setia manusia, hewan peliharaan yang loyal' },
            { keywords: ['book', 'buku'], result: 'üìö Buku - Kumpulan halaman berisi informasi atau cerita' },
            { keywords: ['phone', 'smartphone', 'hp'], result: 'üì± Smartphone - Telepon pintar dengan berbagai fitur canggih' },
            { keywords: ['laptop', 'computer'], result: 'üíª Laptop/Computer - Perangkat komputasi untuk bekerja dan hiburan' },
        ];

        // Math solver
        function solveMath(expression) {
            try {
                // Safety check untuk eval
                if (/^[\d\+\-\*\/\(\)\.\s]+$/.test(expression)) {
                    const result = eval(expression);
                    return `üìä Hasil dari ${expression} = ${result}`;
                }
            } catch (e) {
                return null;
            }
            return null;
        }

        // AI Response System
        function getAIResponse(message) {
            message = message.toLowerCase();

            // Math detection
            if (/[\d\+\-\*\/]/.test(message) && !message.includes(' ')) {
                const mathResult = solveMath(message);
                if (mathResult) return mathResult;
            }

            // Greeting responses
            if (message.includes('halo') || message.includes('hai') || message.includes('hello') || message.includes('hi')) {
                return 'üëã Halo juga! Ada yang bisa saya bantu?';
            }

            // How are you
            if (message.includes('apa kabar') || message.includes('how are you')) {
                return 'üòä Saya baik-baik saja! Terima kasih sudah bertanya. Bagaimana dengan Anda?';
            }

            // Name questions
            if (message.includes('siapa nama') || message.includes('namamu')) {
                return 'ü§ñ Nama saya CyberVision AI, asisten virtual dengan kemampuan deteksi objek dan menjawab berbagai pertanyaan!';
            }

            // What can you do
            if (message.includes('bisa apa') || message.includes('kemampuan') || message.includes('what can you do')) {
                return 'üí™ Saya bisa: \n1. Mendeteksi objek dari kamera\n2. Menjawab pertanyaan umum\n3. Menghitung matematika\n4. Memberikan informasi tentang berbagai topik\n5. Mengobrol dengan Anda!';
            }

            // Time
            if (message.includes('jam berapa') || message.includes('waktu')) {
                return `üïê Sekarang pukul ${new Date().toLocaleTimeString('id-ID')}`;
            }

            // Date
            if (message.includes('tanggal') || message.includes('hari ini')) {
                return `üìÖ Hari ini tanggal ${new Date().toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })}`;
            }

            // Math questions
            if (message.includes('hitung') || message.includes('berapa')) {
                const numbers = message.match(/\d+/g);
                if (numbers && numbers.length >= 2) {
                    if (message.includes('tambah') || message.includes('+')) {
                        const sum = numbers.reduce((a, b) => parseInt(a) + parseInt(b), 0);
                        return `üî¢ Hasil penjumlahan: ${sum}`;
                    }
                    if (message.includes('kali') || message.includes('√ó') || message.includes('*')) {
                        const product = numbers.reduce((a, b) => parseInt(a) * parseInt(b), 1);
                        return `üî¢ Hasil perkalian: ${product}`;
                    }
                }
            }

            // Knowledge base
            const knowledge = {
                'indonesia': 'üáÆüá© Indonesia adalah negara kepulauan terbesar di dunia dengan lebih dari 17.000 pulau. Ibu kotanya adalah Jakarta (akan pindah ke IKN Nusantara).',
                'jakarta': 'üèôÔ∏è Jakarta adalah ibu kota Indonesia yang terletak di Pulau Jawa. Kota metropolitan terbesar di Indonesia.',
                'javascript': 'üíª JavaScript adalah bahasa pemrograman yang populer untuk pengembangan web, baik frontend maupun backend (Node.js).',
                'python': 'üêç Python adalah bahasa pemrograman yang mudah dipelajari dan serbaguna, populer untuk AI, data science, dan web development.',
                'ai': 'ü§ñ AI (Artificial Intelligence) adalah simulasi kecerdasan manusia oleh mesin, terutama sistem komputer.',
                'game': 'üéÆ Game adalah permainan elektronik yang dimainkan melalui perangkat seperti komputer, konsol, atau smartphone.',
            };

            for (let [key, value] of Object.entries(knowledge)) {
                if (message.includes(key)) {
                    return value;
                }
            }

            // Default responses
            const defaultResponses = [
                'ü§î Pertanyaan menarik! Berdasarkan pengetahuan saya, topik ini cukup luas. Bisa Anda perjelas pertanyaannya?',
                'üí≠ Saya akan mencoba membantu! Bisakah Anda memberikan lebih detail tentang apa yang ingin Anda ketahui?',
                'üîç Hmm, saya perlu informasi lebih spesifik untuk menjawab dengan baik. Coba tanyakan dengan cara berbeda?',
                'üìö Itu topik yang menarik! Saya bisa membantu lebih baik jika Anda memberikan konteks lebih jelas.',
                '‚ú® Saya mengerti! Untuk pertanyaan matematika, tuliskan dalam format angka (contoh: 5+3). Untuk pertanyaan lain, coba spesifikkan topiknya!',
            ];

            return defaultResponses[Math.floor(Math.random() * defaultResponses.length)];
        }

        // Initialize camera
        async function initCamera() {
            try {
                stream = await navigator.mediaDevices.getUserMedia({ 
                    video: { 
                        width: { ideal: 1280 },
                        height: { ideal: 720 }
                    } 
                });
                videoElement.srcObject = stream;
                
                // Set canvas size
                videoElement.addEventListener('loadedmetadata', () => {
                    canvas.width = videoElement.videoWidth;
                    canvas.height = videoElement.videoHeight;
                });

                document.getElementById('cameraStatus').textContent = 'üü¢ CAMERA ONLINE';
                document.getElementById('cameraStatus').className = 'status active';
            } catch (err) {
                console.error('Error accessing camera:', err);
                alert('Tidak dapat mengakses kamera. Pastikan Anda memberikan izin akses kamera.');
            }
        }

        // Toggle recording
        function toggleRecording() {
            const btn = document.getElementById('recordBtn');
            const btnText = document.getElementById('btnText');

            if (!isRecording) {
                isRecording = true;
                btn.classList.add('recording');
                btnText.textContent = 'STOP';
                startDetection();
            } else {
                isRecording = false;
                btn.classList.remove('recording');
                btnText.textContent = 'START';
                stopDetection();
            }
        }

        // Start detection
        function startDetection() {
            const autoDetect = document.getElementById('autoDetect').checked;
            const speed = parseInt(document.getElementById('detectionSpeed').value);

            if (autoDetect) {
                detectionInterval = setInterval(() => {
                    performDetection();
                }, speed);
            }
        }

        // Stop detection
        function stopDetection() {
            if (detectionInterval) {
                clearInterval(detectionInterval);
                detectionInterval = null;
            }
        }

        // Perform object detection (simulation)
        function performDetection() {
            // Draw detection box
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            const boxWidth = canvas.width * 0.6;
            const boxHeight = canvas.height * 0.6;
            const boxX = (canvas.width - boxWidth) / 2;
            const boxY = (canvas.height - boxHeight) / 2;

            // Animated border
            ctx.strokeStyle = `hsl(${Date.now() % 360}, 100%, 50%)`;
            ctx.lineWidth = 3;
            ctx.shadowBlur = 20;
            ctx.shadowColor = ctx.strokeStyle;
            ctx.strokeRect(boxX, boxY, boxWidth, boxHeight);

            // Corner markers
            const cornerLength = 30;
            ctx.lineWidth = 5;
            
            // Top-left
            ctx.beginPath();
            ctx.moveTo(boxX, boxY + cornerLength);
            ctx.lineTo(boxX, boxY);
            ctx.lineTo(boxX + cornerLength, boxY);
            ctx.stroke();

            // Top-right
            ctx.beginPath();
            ctx.moveTo(boxX + boxWidth - cornerLength, boxY);
            ctx.lineTo(boxX + boxWidth, boxY);
            ctx.lineTo(boxX + boxWidth, boxY + cornerLength);
            ctx.stroke();

            // Bottom-left
            ctx.beginPath();
            ctx.moveTo(boxX, boxY + boxHeight - cornerLength);
            ctx.lineTo(boxX, boxY + boxHeight);
            ctx.lineTo(boxX + cornerLength, boxY + boxHeight);
            ctx.stroke();

            // Bottom-right
            ctx.beginPath();
            ctx.moveTo(boxX + boxWidth - cornerLength, boxY + boxHeight);
            ctx.lineTo(boxX + boxWidth, boxY + boxHeight);
            ctx.lineTo(boxX + boxWidth, boxY + boxHeight - cornerLength);
            ctx.stroke();

            // Simulate detection
            simulateDetection();
        }

        // Simulate AI detection
        let lastDetection = Date.now();
        function simulateDetection() {
            // Simulate random detection every few seconds
            if (Date.now() - lastDetection > 3000) {
                const randomObj = objectDatabase[Math.floor(Math.random() * objectDatabase.length)];
                displayDetection(randomObj.result);
                lastDetection = Date.now();
            }
        }

        // Display detection result
        function displayDetection(result) {
            const detectionDiv = document.getElementById('detectionResult');
            const item = document.createElement('div');
            item.className = 'detection-item';
            item.innerHTML = `<strong>${new Date().toLocaleTimeString()}:</strong><br>${result}`;
            
            detectionDiv.innerHTML = '';
            detectionDiv.appendChild(item);

            // Also send to chat
            addMessage('ai', `Deteksi: ${result}`);
        }

        // Chat functions
        function sendMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();

            if (message === '') return;

            // Add user message
            addMessage('user', message);
            input.value = '';

            // Show loading
            const loadingMsg = addMessage('ai', '<span class="loading">AI sedang berpikir</span>');

            // Get AI response
            setTimeout(() => {
                const response = getAIResponse(message);
                loadingMsg.remove();
                addMessage('ai', response);
            }, 1000 + Math.random() * 1000);
        }

        // Add message to chat
        function addMessage(type, text) {
            const messagesDiv = document.getElementById('chatMessages');
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${type}`;
            
            const label = document.createElement('div');
            label.className = 'message-label';
            label.textContent = type === 'user' ? 'YOU:' : 'AI ASSISTANT:';
            
            const content = document.createElement('div');
            content.innerHTML = text;
            
            messageDiv.appendChild(label);
            messageDiv.appendChild(content);
            messagesDiv.appendChild(messageDiv);
            
            // Auto scroll
            messagesDiv.scrollTop = messagesDiv.scrollHeight;

            return messageDiv;
        }

        // Initialize
        window.addEventListener('load', () => {
            initCamera();
        });

        // Settings change handlers
        document.getElementById('autoDetect').addEventListener('change', (e) => {
            if (isRecording) {
                stopDetection();
                if (e.target.checked) {
                    startDetection();
                }
            }
        });

        document.getElementById('detectionSpeed').addEventListener('change', () => {
            if (isRecording && document.getElementById('autoDetect').checked) {
                stopDetection();
                startDetection();
            }
        });
    </script>
</body>
</html>
